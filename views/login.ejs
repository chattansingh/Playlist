    <div class="form-group col-lg-8">
      <label for="email" class="col-lg-2 control-label">Email Adddress:</label>
      <div class="col-lg-4">
        <input type="text" class="form-control" id="inputEmail" name="email" placeholder="Email Address">
      </div>
    </div>

  

    <div class="form-group col-lg-8">
      <label for="inputPassword" class="col-lg-2 control-label">Password:</label>
      <div class="col-lg-4">
        <input type="password" name="password" class="form-control" id="inputPassword" placeholder="Please Enter Your Password!">
        
      </div>
    </div>
    <div class="form-group col-lg-8">
      <div class="col-lg-10 col-lg-offset-2">
        
        <a href="/home" class="btn btn-success">Login</a>
